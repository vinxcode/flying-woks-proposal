---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Flying Wok - Asian Flavor in Melbourne">
	<main>
		<div class="p-5">
			<nav
				class="bg-grey-200 w-full shadow-md text-sm font-semibold text-white bg-opacity-70 backdrop-filter
		backdrop-blur-lg py-3 px-10 rounded-full"
			>
				<ul><a href="#">About us</a></ul>
			</nav>
		</div>

		<header
			class="flex flex-col lg:flex-row-reverse px-20 items-center"
		>
			<div class="w-full lg:w-5/12 my-[-70px] lg:my-0">
				<img src="./hero-ilus2.png" alt="Ilustration" />
			</div>
			<div class="w-full lg:w-7/12 flex flex-col text-white gap-3">
				<h1 class="text-5xl font-black">
					Embark on a Flavorful Journey with
					<span class="text-pink-300">Flying Woks</span>
				</h1>
				<h3 class="text-2xl">
					Authentic Asian Cuisine Cooked Fresh for Every Occasion
				</h3>
				<button
					class="bg-red-600 py-3 rounded-lg font-semibold w-1/2 backdrop-filter backdrop-blur-lg bg-opacity-80
				hover:bg-red-500"
					>Order now</button
				>
			</div>
		</header>
	</main>
</Layout>
